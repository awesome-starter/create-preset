{
  "name": "vite-vue3-ts-starter",
  "version": "0.1.0",
  "description": "A template for Vue with TypeScript, base on Vite.",
  "author": "chengpeiquan",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "build:vite": "vite build",
    "serve": "vite preview",
    "lint": "eslint src --ext .js,.ts",
    "format": "prettier --write src",
    "backup": "git add . && git commit -m \"chore: save the coding progress\" && git push"
  },
  "dependencies": {
    "vue": "^3.2.16",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@vitejs/plugin-vue": "^1.9.3",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "less": "^4.1.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3",
    "unplugin-vue-components": "^0.17.6",
    "vite": "^2.6.4",
    "vite-plugin-banner": "^0.1.3",
    "vue-tsc": "^0.3.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
